<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include layout="@layout/view_simple_topbar" />
    <LinearLayout
        android:id="@+id/ll_Back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@mipmap/back_black"
            android:rotation="180" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/height_60"
        android:text="注冊传智"
        android:textColor="@color/black_28"
        android:textSize="@dimen/textsize_22" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:text="请确认您的国家区号\n并确认手机号号码"
        android:textColor="@color/black_40"
        android:textSize="@dimen/textsize_15" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/height_50"
        android:background="@color/black_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_CountriesName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="中国"
            android:textColor="@color/black_3a"
            android:textSize="@dimen/textsize_14" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/back_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/black_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_20"
            android:text="+86"
            android:textColor="@color/black_3a"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:background="@color/black_e5" />

        <EditText
            android:id="@+id/et_RegisterPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/black_e5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_20"
            android:text="登录密码"
            android:textColor="@color/black_3a"
            android:textSize="@dimen/textsize_14" />

        <EditText
            android:id="@+id/et_RegisterPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入6-18位密码"
            android:inputType="textPassword"
            android:digits="@string/password"
            android:maxLength="18"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="@dimen/textsize_14" />
        <LinearLayout
            android:id="@+id/ll_PswVisibleType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15">
            <ImageView
                android:id="@+id/iv_PswVisibleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/pwdgone"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/black_e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_20"
            android:text="验证码"
            android:textColor="@color/black_3a"
            android:textSize="@dimen/textsize_14" />

        <EditText
            android:id="@+id/et_RegisterCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:textColor="@color/black_33"
            android:textColorHint="@color/black_99"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_RegisterGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_blue"
            android:gravity="center"
            android:minHeight="@dimen/height_30"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/black_e5" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_RegisterCheck"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/checkbox_un"/>
        <TextView
            android:id="@+id/tv_RegisterCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_13"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:textColor="@color/black_38"
            android:text="我已阅读并同意"/>
        <TextView
            android:id="@+id/tv_RegisterCheckAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/blue"
            android:layout_gravity="center_vertical"
            android:text="《传智用户协议和隐私条款》"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_Register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/shape_gradient"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16" />
</LinearLayout>
