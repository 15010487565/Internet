<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="@dimen/margin_20"
    android:paddingBottom="@dimen/margin_20"
    android:paddingLeft="@dimen/margin_15">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.xcd.www.internet.view.CircleImageView
            android:id="@+id/iv_redPkgListHead"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@color/red"
            app:type="circle" />
        <TextView
            android:id="@+id/tv_redPkgListHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_15"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_RedPkgListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/black_66"
            tools:text="****" />
        <TextView
            android:id="@+id/tv_RedPkgListTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/black_99"
            android:text="00-00 00:00" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_RedPkgListMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:textSize="@dimen/textsize_14"
        android:textColor="@color/black_4e"
        android:layout_marginRight="@dimen/margin_20"
        tools:text="****" />
</LinearLayout>