<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginLeft="@dimen/height_15"
                android:layout_marginRight="@dimen/height_15"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/margin_3"
                    android:layout_height="match_parent"
                    android:background="@color/blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:text="请上传手持身份证照片"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="71px"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_12"
                android:text="手持身份证"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="25px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_UploadCard"
                    android:layout_width="390px"
                    android:layout_height="252px"
                    android:src="@mipmap/author_idcard_3" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_AuthorUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16"
                android:layout_marginTop="241px"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:layout_margin="@dimen/margin_20"
                android:background="@color/blue"
                android:gravity="center"
                android:text="提交"/>
        <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>
