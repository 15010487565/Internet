<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ee"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/view_simple_topbar" />
    <!--<www.xcd.com.mylibrary.view.MultiSwipeRefreshLayout-->
        <!--android:id="@+id/swipe_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:addStatesFromChildren="true"-->
        <!--android:focusable="true"-->
        <!--android:focusableInTouchMode="true">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_ee"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner_Find"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@drawable/normal"
                app:indicator_drawable_unselected="@drawable/unnormal" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_Find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_scrollFlags="scroll" />
        </LinearLayout>
    <!--</www.xcd.com.mylibrary.view.MultiSwipeRefreshLayout>-->

</LinearLayout>

