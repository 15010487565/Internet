<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@mipmap/redpkg_sector"/>
        <com.xcd.www.internet.view.CircleImageView
            android:id="@+id/iv_OpenRedPkgDetHead"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="200px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/launcher_login"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_OpenRedPkgDetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19px"
        android:textColor="@color/black_33"
        android:textSize="@dimen/textsize_14"
        android:text="何夏夏"/>
    <TextView
        android:id="@+id/tv_OpenRedPkgDetRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19px"
        android:textColor="@color/black_99"
        android:textSize="@dimen/textsize_12"
        android:text="恭喜发财 大吉大利"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iv_OpenRedPkgDetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:layout_gravity="bottom"
            android:textSize="35sp"
            android:singleLine="true"
            android:text="0.00"/>
        <TextView
            android:id="@+id/iv_OpenRedPkgDetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_13"
            android:layout_marginLeft="@dimen/margin_5"
            android:singleLine="true"
            android:text="USDT"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginBottom="40px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_OpenRedPkgbagNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_66"
            android:layout_gravity="bottom"
            android:textSize="@dimen/textsize_13"
            android:singleLine="true"
            android:text="您还有8次抢红包机会，"/>
        <TextView
            android:id="@+id/tv_Go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_13"
            android:layout_marginLeft="@dimen/margin_5"
            android:singleLine="true"
            android:text="继续抢"/>
    </LinearLayout>

</LinearLayout>