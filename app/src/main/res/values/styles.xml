<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top_bar_background</item>
        <item name="colorPrimaryDark">@color/top_bar_background</item>
        <item name="colorAccent">@color/top_bar_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redpkg</item>
        <item name="colorPrimaryDark">@color/redpkg</item>
        <item name="colorAccent">@color/redpkg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/top_bar_background</item>
        <item name="colorPrimaryDark">@color/top_bar_background</item>
        <item name="colorAccent">@color/top_bar_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/launcher_bg</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <!--弹出框动画-->
    <style name="share_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- 对话框样式 -->
    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="author_bank_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">52px</item>
        <item name="android:layout_marginTop">52px</item>
        <item name="android:layout_marginBottom">52px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#454545</item>
        <item name="android:textSize">@dimen/textsize_15</item>
    </style>

    <style name="author_bank_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_66</item>
        <item name="android:textColorHint">@color/black_99</item>
        <item name="android:textSize">@dimen/textsize_15</item>
        <item name="android:background">@null</item>
    </style>
</resources>
